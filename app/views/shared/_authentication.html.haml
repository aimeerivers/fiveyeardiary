%ul.nav.secondary-nav
  - if user_signed_in?
    %li.dropdown
      = link_to "Hello #{current_user.name}", '#', class: 'dropdown-toggle'
      %ul.dropdown-menu
        %li= link_to 'Edit profile', edit_profile_path
        %li= link_to 'Edit settings', edit_settings_path
        %li.divider
        %li= link_to 'Sign out', sign_out_path

  - else
    %li= link_to 'Sign up', sign_up_path
    %li= link_to 'Sign in', sign_in_path
